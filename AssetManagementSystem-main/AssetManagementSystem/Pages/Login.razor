@page "/login"
@inject NavigationManager NavigationManager
@inject IConfiguration Configuration
@using System.ComponentModel.DataAnnotations

<h3>Login</h3>

<EditForm Model="LoginData" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Username</label>
        <InputText class="form-control" @bind="LoginData.Username" />
    </div>

    <div class="mb-3">
        <label>Password</label>
        <InputText class="form-control" type="password" @bind="LoginData.Password" />
    </div>

    <button class="btn btn-primary" type="submit">Login</button>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="text-danger mt-2">@ErrorMessage</div>
    }
</EditForm>

@code {
    private LoginModel LoginData = new LoginModel(); 
    private string ErrorMessage = string.Empty;      
    private void HandleLogin()
    {
        var configuredUser = Configuration["AdminCredentials:Username"];
        var configuredPass = Configuration["AdminCredentials:Password"];

        if (LoginData.Username == configuredUser && LoginData.Password == configuredPass)
        {
            NavigationManager.NavigateTo("/dashboard");
        }
        else
        {
            ErrorMessage = "Invalid username or password";
        }
    }

    public class LoginModel
    {
        [Required]
        public string Username { get; set; } = string.Empty; 
        [Required]
        public string Password { get; set; } = string.Empty; 
    }
}
