@page "/employees/edit/{EmployeeId:int}"
@inject IEmployeeService EmployeeService
@inject NavigationManager NavigationManager
@using AssetManagementSystem.Models
@using System.ComponentModel.DataAnnotations

<h3>@(EmployeeId == 0 ? "Add Employee" : "Edit Employee")</h3>

<EditForm Model="EmployeeModel" OnValidSubmit="SaveEmployee">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Full Name</label>
        <InputText class="form-control" @bind-Value="EmployeeModel.FullName" />
    </div>

    <div class="mb-3">
        <label>Department</label>
        <InputText class="form-control" @bind-Value="EmployeeModel.Department" />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <InputText class="form-control" @bind-Value="EmployeeModel.Email" />
    </div>

    <div class="mb-3">
        <label>Phone Number</label>
        <InputText class="form-control" @bind-Value="EmployeeModel.PhoneNumber" />
    </div>

    <div class="mb-3">
        <label>Designation</label>
        <InputText class="form-control" @bind-Value="EmployeeModel.Designation" />
    </div>

    <div class="mb-3">
        <label>Status</label>
        <InputSelect class="form-control" @bind-Value="EmployeeModel.Status" TValue="string">
            <option value="Active">Active</option>
            <option value="Inactive">Inactive</option>
        </InputSelect>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
    <button class="btn btn-secondary ms-2" @onclick="Cancel">Cancel</button>
</EditForm>

@code {
    [Parameter] public int EmployeeId { get; set; }
    private Employee EmployeeModel = new();

    protected override async Task OnInitializedAsync()
    {
        if (EmployeeId != 0)
        {
            EmployeeModel = await EmployeeService.GetEmployeeByIdAsync(EmployeeId);
        }
    }

    async Task SaveEmployee()
    {
        if (EmployeeId == 0)
            await EmployeeService.AddEmployeeAsync(EmployeeModel);
        else
            await EmployeeService.UpdateEmployeeAsync(EmployeeModel);

        NavigationManager.NavigateTo("/employees");
    }

    void Cancel() => NavigationManager.NavigateTo("/employees");
}
